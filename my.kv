<slots>:
    s1:s1
    s2:s2
    s3:s3
    c:c
    r:r
    GridLayout:
        size:root.width,root.height
        rows:4
        cols:1
        Label:
            text:"7 7 7"
            color:1,0,0,1
            font_size:60
            halign:'center'
        GridLayout:
            rows:1
            cols:3
            Label:
                id:s1
                text:'7'
                color:1,0,0,1
                font_size:45
                halign:'center'
            Label:
                id:s2
                text:'7'
                color:0,1,0,1
                font_size:45
                halign:'center'
            Label:
                id:s3
                text:'7'
                color:0,0,1,1
                font_size:45
                halign:'center'
        Label:
            id:c
            color:1,1,0,1
            font_size:45
            text:'1000 chips'
        GridLayout:
            rows:1
            cols:2
            Label:
                id:r
                text:''
                color:1,0,0,1
                font_size:45
            Button:
                text:'Roll!'
                color:0,1,1,1
                font_size:45
                on_press:root.btn()